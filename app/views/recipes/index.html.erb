<h1>Recipes</h1>
<h3>We are searching for <%= @search_term %><p>

<div class="recipes-wrapper">
  <div class="row">
    <div class="col-third">
      image
    </div>
    <div class="col-third">
      title
    </div>
    <div class="col-third">
      rank
    </div>
  </div>
  <% @recipes.each do |recipe| %>
    <div class="row">
      <div class="col-third">
        <%= link_to image_tag(recipe["image_url"], size: "100x100"), recipe["source_url"] %>
      </div>
      <div class="col-third">
        <%= link_to recipe["title"], recipe["source_url"] %>
      </div>
      <div class="col-third">
        <%= format('%.3f' , recipe["social_rank"]) %>
      </div>
    </div>
  <% end %>
</div>
